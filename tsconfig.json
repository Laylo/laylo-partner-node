{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "declaration": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "dist"]
}
